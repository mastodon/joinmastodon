    "classnames": "^2.5.1",
    "dotenv": "^16.4.5",
    "javascript-stringify": "^2.1.0",
    "keen-slider": "^6.8.6",
    "lodash": "^4.17.21",
    "next": "^15.2.5",
    "node-gyp": "^11.2.0",
    "react": "^18.3.1",
    "react-blurhash": "^0.3.0",
    "react-dom": "^18.3.1",
    "react-intl": "^7.0.0",
    "sass": "^1.86.3",
